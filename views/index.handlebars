  <div id="header">
    <h1>Burgers!</h1>
    <img src="assets/img/burger.png" alt="burger" height="150px">
  </div>
<dir id="flex">
  <div class="left">
    <h2>To Eat</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}

        <button class="eat-burger" data-id="{{this.id}}">Eat!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="right">
    <h2>eaten burgers</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</dir>

<div class="add-new">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger</label>
      <input type="text" id="new-burger" name="name">
    </div>

    <button id="submit-burger" type="submit">Add Burger</button>
  </form>

</div>